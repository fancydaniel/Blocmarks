<h1><%= @topic.title %></h1>

<%= render partial: 'bookmarks/form', locals: { topic: @topic, bookmark: @new_bookmark } %>

  <% @bookmarks.each do |bookmark| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to bookmark.url, bookmark.url, target: "_blank" %>
          <% if current_user %>
            <small class="little"><%= link_to "Edit", edit_topic_bookmark_path(@topic, bookmark) %></small>
            <small class="little"><%= link_to "Delete", [@topic, bookmark], method: :delete  %></small>
          <% end %>
        </h4>
        <%= render partial: 'likes/like', collection: @bookmark %>
      </div>
    </div>
  <% end %>
